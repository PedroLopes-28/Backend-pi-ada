generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password String

  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())
  jokes Joke[]


  @@map("users")
}

model Joke{
  id String @id @default(uuid())
  setup String
  punchline String
  user_id String
  user User @relation(fields:[user_id], references:[id])

  

  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  @@map("jokes")

}

